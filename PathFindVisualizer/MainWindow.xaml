<Window x:Class="PathFindVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathFindVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="PathGrid" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="SubmitBtn" Content="Find path" HorizontalAlignment="Left" Margin="379,188,0,0" VerticalAlignment="Top" Width="75" Click="SubmitBtn_Click"/>
        <Button x:Name="ClearBtn" Content="Clear" HorizontalAlignment="Left" Margin="380,242,0,0" VerticalAlignment="Top" Width="75" Click="ClearBtn_Click"/>
        <CheckBox x:Name="WallsCheckBox" Content="Draw walls" HorizontalAlignment="Left" Margin="380,35,0,0" VerticalAlignment="Top" Checked="WallsCheckBox_Checked" Unchecked="WallsCheckBox_Checked"/>
        <ComboBox x:Name="AlgSelect" HorizontalAlignment="Left" Margin="380,97,0,0" VerticalAlignment="Top" Width="166">
            <ComboBoxItem Content="Breadth First Search" IsSelected="True"/>
            <ComboBoxItem Content="Dijkstra's Algorithm"/>
            <ComboBoxItem Content="Greedy Best First Search"/>
            <ComboBoxItem Content="A*"/>
        </ComboBox>
        <Button x:Name="ResetBtn" Content="Reset" HorizontalAlignment="Left" Margin="492,242,0,0" VerticalAlignment="Top" Width="75" Click="ResetBtn_Click"/>
    </Grid>
</Window>
